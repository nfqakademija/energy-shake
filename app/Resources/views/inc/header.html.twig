<header>
    <div class="main-menu">
        <div class="center-menu">
            <a href="{{ path('app.home') }}">Home</a>
            <a href="{{ path('app.product') }}">Products</a>
            <a href="{{ path('app.about') }}">About</a>
        </div>
        <div class="user-menu">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {% if app.user.image %}
                    <img src="{{ app.user.image }}" class="profile-image">
                {% endif %}
                <a href="{{ path('app.profile') }}">{{ app.user.username }}</a>
                <a href="{{ path('app.cart') }}">Cart</a>
                <a href="{{ logout_path() }}">Logout</a>
            {% else %}
                <a href="{{ path('app_facebook_connect') }}"> Login/Register </a>
            {% endif %}
        </div>
    </div>
</header>
