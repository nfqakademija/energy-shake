{% extends "::base.html.twig" %}

{% block title %}Product - {{ parent() }}{% endblock %}

{% block body %}

    <div style="margin-top: 67px"></div>
    <div class="row">
        <div class="col-md-12">
            <h3 class="text-center">{{ product.title }}</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="thumbnail text-center">
                <a href="{{ path('app.product', {'id': product.id}) }}">
                    <img src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="{{ product.title }}" style="height: 200px" class="shake"/>
                </a>
                <p><strong>{{ product.title }}</strong></p>
                <p>{{ product.description }}</p>
                <p>{{ 'product.parts'|trans }}</p>
                <ul class="parts-list">
                    {% for part in product.parts %}
                        <li>
                            <img src="{{ vich_uploader_asset(part, 'imageFile') }}" alt="{{ part.title }}" />
                        </li>
                    {% endfor %}
                </ul>
                <button class="btn" data-toggle="modal" data-target="#product-{{ product.id }}"><span class="glyphicon glyphicon-shopping-cart"></span></button>
            </div>

            <div class="modal fade" id="product-{{ product.id }}" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">Ã—</button>
                            <h4><span class="glyphicon glyphicon-apple"></span> {{ product.title }}</h4>
                        </div>
                        <div class="modal-body">
                            <form role="form">
                                <div class="form-group">
                                    <label for="psw"></span>{{ 'home.price'|trans }}{{ product.price }}</label>
                                    <input type="number" min="1" class="form-control" id="psw" placeholder="{{ 'home.how_many'|trans }}">
                                </div>
                                <button type="submit" class="btn btn-block">{{ 'home.add_to_cart'|trans }}
                                    <span class="glyphicon glyphicon-shopping-cart"></span>
                                </button>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-danger btn-default pull-left" data-dismiss="modal">
                                <span class="glyphicon glyphicon-remove"></span> {{ 'home.cancel'|trans }}
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>

{% endblock %}
