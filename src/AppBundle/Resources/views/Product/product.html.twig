{% extends "::base.html.twig" %}

{% block title %}Product - {{ parent() }}{% endblock %}

{% block body %}
    <div class="single-product list" style="background-image: url({{ asset("images/wood-background.jpg") }})">
        <div style="margin-top: 67px"></div>
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-center">{{ product.title }}</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="thumbnail text-center product id-row" data-id="{{ product.id }}"
                     data-price="{{ product.price }}">
                        <img src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="{{ product.title }}" style="height: 200px" class="shake"/>
                    <p><strong>{{ product.title }}</strong></p>
                    <p>{{ product.description }}</p>
                    <p>{{ 'product.parts'|trans }}</p>
                    <ul class="parts-list">
                        {% for part in product.parts %}
                            <li>
                                <img src="{{ vich_uploader_asset(part, 'imageFile') }}" alt="{{ part.title }}" />
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </div>
{% endblock %}
