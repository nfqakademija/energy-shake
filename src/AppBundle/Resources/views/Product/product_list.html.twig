{% extends "::base.html.twig" %}

{% block title %}Product - {{ parent() }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <ul class="products-list">
                {{ dump(list) }}
                {% for product in list %}
                    <li>
                        <a href="{{ path('app.product', {'id': product.id}) }}">
                            {{ product.title }}
                            <img src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="{{ product.title }}" style="height: 200px" />
                            {{ product.description }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
