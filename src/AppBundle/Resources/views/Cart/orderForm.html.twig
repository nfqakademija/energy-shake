{% extends "::base.html.twig" %}

{% block title %}Order - {{ parent() }}{% endblock %}

{% block body %}
    <div class="header-margin"></div>
    <h2 class="text-center">{{ 'orderform.orderform'|trans }}</h2>
    <hr>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="form-group">
                <div class="col-md-2">
                    {{ form_label(form.name, 'orderform.name'|trans) }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.name) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                {{ form_label(form.email, 'orderform.email'|trans) }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.email) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                {{ form_label(form.phone, 'orderform.phone'|trans) }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.phone) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                {{ form_label(form.address, 'orderform.address'|trans) }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.address) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                {{ form_label(form.comment, 'orderform.yourcomment'|trans) }}
                </div>
                <div class="col-sm-10">
                    {{ form_widget(form.comment) }}
                </div>
            </div>
            {{ form_rest(form) }}
            <div class="form-group">
                <div class="well col-sm-offset-8 col-sm-4 text-right">
                    {{ 'orderform.totalsumis'|trans }} <span id="totalsum"></span> â‚¬
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10 text-right">
                    <button type="submit" class="btn">{{ 'orderform.submit'|trans }}</button>
                </div>
            </div>
            {{ form_start(form) }}
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(function () {
            //total sum from navbar cart
            var totalSum = $('#cart-sum').html();
            $('#totalsum').html(totalSum);
        });
    </script>
{% endblock javascripts %}